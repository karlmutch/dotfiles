if [[ "$OSX" = "1" ]]
then
    if [[ "$TERM" = "rxvt-unicode-256color" ]]
    then
      export TERM=rxvt-256color
    fi
fi

if [[ "$RaspberryPi" = "1" ]]
    if [[ "$COLORTERM" = "rxvt-xpm" ]]
    then
        export TERM=rxvt-unicode-256color
        export COLORTERM=rxvt-unicode-256color
    fi
then
    if [[ "$TERM" = "xterm" ]]
    then
      export TERM=rxvt-unicode-256color
      export COLORTERM=rxvt-unicode-256color
    fi
fi

eval $( dircolors -b ~/.ls_colors )
