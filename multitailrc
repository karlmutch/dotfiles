#include:/etc/multitail.conf

# Stupid mail check...
check_mail:0

# Possible colors: red, green, yellow, blue, magenta, cyan, white

colorscheme:mydefault:General Logging
cs_re:red:WARN
cs_re:green:INFO
#cs_re_s:red:.*\[(ERROR|error|EROR|FATL)\].*
#cs_re_s:yellow:.*\[(WARN|warn|WARNING|warning)\].*
#cs_re_s:green:.*\[(INFO|info)\].*
#cs_re_s:cyan:.*\[(DEBUG|debug|DBUG)\].*
#cs_re:green:|.*$
#cs_re:cyan::
#cs_re:blue:.. ..:..:......
#

# whether to abbreviate filesizes to xKB/MB/GB
abbreviate_filesize:on

# timestring format for statusline
statusline_ts_format:%m/%d/%Y %H:%M

statusline_attrs:green,black,reverse

# enable things with the xterm title bar
# %f  changed file
# %h  hostname
# %l  system load
# %m  "New mail" or nothing
# %u  username
# %t  date + time
titlebar:%u@%h %f (%t) [%l]

# Pick default screen 
defaultcscheme:mydefault

